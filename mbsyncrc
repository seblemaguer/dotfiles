##########################################################################
# Coli Saarland
##########################################################################
IMAPAccount Saarland
Host mail.coli.uni-saarland.de
User slemaguer
PassCmd "python3 ~/.get_passwd.py 'mail.coli.uni-saarland.de' 'slemaguer'"
Port 993
SSLType IMAPS
# CertificateFile /etc/ssl/certs/ca-bundle.crt


IMAPStore Saarland-remote
Account Saarland

MaildirStore Saarland-local
Path ~/mail/Saarland/
Inbox ~/mail/Saarland/INBOX
SubFolders Legacy

Channel Saarland
Master :Saarland-remote:
Slave :Saarland-local:
Patterns "INBOX" *
Create Slave
Sync All
Expunge Both
SyncState *

# ##########################################################################
# # Dfki
# ##########################################################################
IMAPAccount Dfki
Host imap.dfki.de
User sele01
PassCmd "python3 ~/.get_passwd.py 'imap.dfki.de' 'sele01'"
Port 993
SSLType IMAPS
# CertificateFile /etc/ssl/certs/ca-bundle.crt


IMAPStore Dfki-remote
Account Dfki
UseNamespace no

MaildirStore Dfki-local
Path ~/mail/Dfki/
Inbox ~/mail/Dfki/INBOX

Channel Dfki
Master :Dfki-remote:
Slave :Dfki-local:
Patterns "*"
Create Slave
Sync All
Expunge Both
SyncState *



